{
	"compilerOptions": {
		"outDir": "dist",
		"allowJs": true,
		"checkJs": true,
		"downlevelIteration": true,
		"emitBOM": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"module": "es6",
		"noEmitOnError": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node"
	}
}